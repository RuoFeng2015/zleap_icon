{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2015"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".",
    "rootDir": ".",
    "downlevelIteration": true,
    "typeRoots": [
      "./node_modules/@figma/plugin-typings",
      "./node_modules/@types"
    ]
  },
  "include": ["code.ts"],
  "exclude": ["node_modules"]
}
